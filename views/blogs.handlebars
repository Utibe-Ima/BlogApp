<section class="blogs-section">
    <h2>All Blogs</h2>

    {{#each allPost}}
    <div class="blog">
        <h3>{{title}}</h3>
        <p>
            {{body}}
        </p>
        <address>{{writer}}</address>
    </div>

    <div class="format">
        <form action="{{links.remove}}?_method=DELETE" method="POST">
            <input type="submit" value="Delete Blog Post">
        </form>
        <a href="{{links.update}}">Update Blog Post</a>
        {{!-- <form action="{{links.update}}?_method=PUT" method="POST">
            <input type="submit" value="Update Blog Post">
        </form> --}}
        <a href="{{links.show}}">Read more</a>
    </div>
    {{else}}
    <p>No Blog Post Available</p>
    {{/each}}

</section>